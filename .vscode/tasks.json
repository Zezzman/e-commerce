{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Update scss",
            "type": "shell",
            "command": "scss --update resources/scss/:public/assets/css/ --style expanded",
            "args": [],
            "problemMatcher": [
                "$node-sass"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "clear": true,
                "showReuseMessage": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Watch scss",
            "type": "shell",
            "command": "scss --watch resources/scss/:public/assets/css/ --style expanded",
            "args": [],
            "problemMatcher": [
                "$node-sass"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true,
                "showReuseMessage": true
            }
        },
        {
            "label": "Update Autoload",
            "type": "shell",
            "command": "composer dump-autoload",
            "presentation": {
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "clear": true,
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Test Default",
            "type": "shell",
            "command": "../vendor/bin/phpunit",
            "options": {
                "cwd": "${workspaceFolder}/tests/"
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "clear": true,
                "showReuseMessage": true
            },
            "problemMatcher": []
        }
    ]
}